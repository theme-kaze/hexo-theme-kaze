<footer class="footer">
  <div class="footer-container">
    <div class="copyright">
      <div>
        <span id="copy_year">Copyright Â©
          <% if(theme.footer.copy_year) { %>
          <%- theme.footer.copy_year %> -
          <% } %>
          <%- date(Date.now(), 'YYYY') %>
        </span>
        <a href="/" class="footer-link"><%- theme.title %> </a>
      </div>
    </div>

    <% if(theme.footer.showPoweredBy || theme.footer.showThemeName) { %>
    <div class="footer-dsc">
      <%# showPoweredBy %>
      <% if(theme.footer.showPoweredBy) { %>
      Powered by
      <a href="https://hexo.io/" class="footer-link" target="_blank">&nbsp;Hexo </a>
      <% } %>
      <% if(theme.footer.showPoweredBy && theme.footer.showThemeName) { %>
      <span>&nbsp;|&nbsp;</span>
      <% } %>
      <%# showThemeName %>
      <% if(theme.footer.showThemeName) { %>
      Theme -
      <a href="https://github.com/theme-kaze" class="footer-link" target="_blank">&nbsp;Kaze</a>
      <% } %>
    </div>
    <% } %>
</footer>